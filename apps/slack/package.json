{
  "name": "@elba-security/slack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "database:down": "docker-compose -p slack down --volumes",
    "database:generate": "drizzle-kit generate:pg --config ../../drizzle.config.ts",
    "database:migrate": "drizzle-kit push:pg --config ../../drizzle.config.ts",
    "database:up": "docker-compose -p slack --profile edge --env-file=.env.local up -d",
    "dev:inngest": "inngest-cli dev",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@elba-security/config": "workspace:*",
    "@elba-security/inngest": "workspace:*",
    "@elba-security/logger": "workspace:*",
    "@elba-security/nextjs": "workspace:*",
    "@elba-security/sdk": "workspace:*",
    "@elba-security/utils": "workspace:*",
    "@neondatabase/serverless": "0.9.4",
    "@slack/bolt": "^3.14.0",
    "@slack/web-api": "^6.9.1",
    "@t3-oss/env-nextjs": "^0.7.1",
    "drizzle-orm": "^0.29.4",
    "inngest": "3.22.2",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "slack-web-api-client": "^0.7.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^3.2.0",
    "@elba-security/eslint-config-custom": "workspace:*",
    "@elba-security/test-utils": "workspace:*",
    "@elba-security/tsconfig": "workspace:*",
    "@next/eslint-plugin-next": "^14.2.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8",
    "inngest-cli": "^0.29.1",
    "msw": "^2.3.1",
    "postgres": "^3.4.4",
    "testcontainers": "^10.10.0",
    "typescript": "^5.5.2",
    "vitest": "1.6.0"
  }
}
